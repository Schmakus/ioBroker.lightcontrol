{
  "name": "iobroker.lightcontrol",
  "version": "0.5.0",
  "description": "Light control of lamps from various manufacturers",
  "author": {
    "name": "Schmakus",
    "email": "schmakus@gmail.com"
  },
  "homepage": "https://github.com/Schmakus/ioBroker.lightcontrol",
  "license": "MIT",
  "keywords": [
    "light",
    "lightcontrol",
    "control",
    "motion",
    "motionsensor",
    "motiondetection",
    "smarthome",
    "iobroker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Schmakus/ioBroker.lightcontrol.git"
  },
  "engines": {
    "node": ">= 18",
    "npm": ">=7"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.0.4",
    "suncalc2": "^1.8.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.9",
    "@alcalzone/release-script-plugin-iobroker": "^3.5.9",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.2.0",
    "@iobroker/testing": "^4.1.3",
    "@tsconfig/node14": "^14.1.2",
    "@types/chai": "^4.3.9",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.2",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.2",
    "@types/sinon-chai": "^3.2.12",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "proxyquire": "^2.1.3",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "typescript": "~5.4.3"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint .",
    "translate": "translate-adapter",
    "release": "release-script",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes"
  },
  "bugs": {
    "url": "https://github.com/Schmakus/ioBroker.lightcontrol/issues"
  },
  "readmeFilename": "README.md"
}
